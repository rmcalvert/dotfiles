api-stop () {
  brew services stop postgresql@15
  brew services stop redis
}

api-start () {
  brew services start postgresql@15
  brew services start redis
}

wt-co () {
	local current_dir=$(basename "$PWD")
	local selected_branch=$(git branch -r | sed 's/origin\///' | sed 's/^[* ]*//' | grep -v HEAD | sort -u | fzf --prompt="Select branch: " --height=40%)
	if [[ -z "$selected_branch" ]]
	then
		echo "No branch selected."
		return 1
	fi
	local worktree_base="../${current_dir}-worktrees"
	local worktree_path="${worktree_base}/${selected_branch}"
	mkdir -p -p "$worktree_base"
	echo "Creating worktree at: $worktree_path"
	git worktree add "$worktree_path" "origin/$selected_branch"

	cd "$worktree_path"
  git co $selected_branch
	echo "Switched to worktree: $selected_branch"
}

wt-api-cp () {
  local project_home="~/Projects/mt-api"
  local config_source_dir="src/main/java/conf"
  echo "Copying files"
  cp "${project_home}/${config_source_dir}/development.conf" "./${config_source_dir}"
  # cp ".tool-versions" "${worktree_path}"
  cp -r "${project_home}/.idea" .
}

wt-app-cp () {
  local project_home="~/Projects/mt-app"
  echo "Copying files"
  # cp ".tool-versions" "${worktree_path}"
  cp -r "${project_home}/.idea" .
}

wt-cd () {
	if ! git rev-parse --git-dir > /dev/null 2>&1
	then
		echo "Error: Not in a git repository"
		return 1
	fi
	if ! command -v fzf > /dev/null 2>&1
	then
		echo "Error: fzf is not installed"
		return 1
	fi
	local worktrees=$(git worktree list --porcelain | grep -E "^worktree " | sed 's/^worktree //' | grep -v "$(git rev-parse --show-toplevel)$")
	if [[ -z "$worktrees" ]]
	then
		echo "No additional worktrees found"
		return 0
	fi
	local selected=$(echo "$worktrees" | fzf --multi --prompt="Select worktrees to navigate to: " --height=40% --reverse --border)
	if [[ -z "$selected" ]]
	then
		echo "No worktrees selected"
		return 0
	fi
  cd $selected
	pwd
}

wt-kill () {
	if ! git rev-parse --git-dir > /dev/null 2>&1
	then
		echo "Error: Not in a git repository"
		return 1
	fi
	if ! command -v fzf > /dev/null 2>&1
	then
		echo "Error: fzf is not installed"
		return 1
	fi
	local worktrees=$(git worktree list --porcelain | grep -E "^worktree " | sed 's/^worktree //' | grep -v "$(git rev-parse --show-toplevel)$")
	if [[ -z "$worktrees" ]]
	then
		echo "No additional worktrees found"
		return 0
	fi
	local selected=$(echo "$worktrees" | fzf --multi --prompt="Select worktrees to remove: " --height=40% --reverse --border)
	if [[ -z "$selected" ]]
	then
		echo "No worktrees selected"
		return 0
	fi
	echo "$selected" | while IFS= read -r worktree
	do
		echo "Removing worktree: $worktree"
		if git worktree remove "$worktree"
		then
			echo "✓ Removed: $worktree"
		else
			echo "✗ Failed to remove: $worktree"
		fi
	done
	echo "Done"
}

